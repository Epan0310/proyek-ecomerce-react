generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  description String? // Tanda '?' berarti opsional
  image       String? // Tanda '?' berarti opsional
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  image     String?  // <-- UBAH DI SINI (tambahkan '?')
  role      String   @default("USER")
  createdAt DateTime @default(now())
}

